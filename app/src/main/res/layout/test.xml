<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:text="111"
    android:orientation="vertical"
    android:background="#1a000000"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_test"/>




    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="212dp" />

    <TextView
        android:id="@+id/tv_title"
        android:text="吉他一对一体验课"
        android:textSize="18dp"
        android:textColor="#222"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_line"
        android:background="#F7F8FB"
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <TextView
        android:text="适用机构"
        android:textSize="18dp"
        android:textColor="#222"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="北京·艺典星脉"
            android:textSize="16dp"
            android:textColor="#222"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:text="北京市海淀区杏石门路中间艺术区（中间剧场）中间艺术…"
            android:textSize="12dp"
            android:textColor="#666"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:text="总课时数：1节"
            android:textSize="14dp"
            android:textColor="#999"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:text="每节时长：60分钟"
            android:textSize="14dp"
            android:textColor="#999"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:text="课程描述内容，机构后台编辑，最多200字，课程描述内容，机构后台编辑，最多200字，课程描述内容，机构后台编辑，最多200字。课程描述内容，机构后台编辑，最多200字。"
        android:textSize="14dp"
        android:textColor="#222"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="温馨提示"
        android:textSize="16dp"
        android:textColor="#999"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="5dp"
            android:layout_height="5dp"
            app:cardCornerRadius="2.5dp"
            android:layout_marginTop="7.5dp"
            app:cardBackgroundColor="#8CB4EB"
            app:cardElevation="0dp" />
        <TextView
            android:text="为保障您的权益，建议使用艺考生APP线上支付。若使用其他支付方式导致纠纷，艺考生APP不承担任何责任，感谢您的理解和支持。"
            android:textSize="14dp"
            android:textColor="#222"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/ly_money"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="￥"
                    android:textColor="#FE4A4A"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_money"
                    android:text="9.9"
                    android:textColor="#FE4A4A"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_marginTop="2dp"
                android:text="原价￥99.0"
                android:textColor="#999"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            app:layout_constraintLeft_toRightOf="@id/ly_money"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#1a000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/ly_chat"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintLeft_toRightOf="@id/ly_money"
            android:layout_marginLeft="1dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="#1a000000" />
            <TextView
                android:text="咨询"
                android:textSize="10dp"
                android:textColor="#222"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:elevation="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ly_chat"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:padding="0dp"
            android:text="立即抢购"
            android:textSize="16dp"
            android:textColor="#fff"
            app:backgroundTint="#0A84FF"
            app:cornerRadius="22dp" />

        <View
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1a00000"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>