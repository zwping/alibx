<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="0dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#333"
                android:text="Name"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_num"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:text="预约12人"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#fff"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/iv_avatar1"
                android:alpha="0.6"
                android:layout_marginRight="44dp"
                app:layout_constraintRight_toLeftOf="@id/tv_num"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/iv_avatar2"
                android:alpha="0.8"
                android:layout_marginRight="24dp"
                app:layout_constraintRight_toLeftOf="@id/tv_num"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/iv_avatar3"
                android:layout_marginRight="4dp"
                app:layout_constraintRight_toLeftOf="@id/tv_num"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ly_container"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_marginTop="1dp"
                    android:text="身份认证：北京星火表演班 · 播音老师身份认证：北京星火表演班 · 播音老师身份认证：北京星火表演班 · 播音老师"
                    android:layout_marginLeft="25dp"
                    android:textSize="12dp"
                    android:textColor="#333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>

        
    </LinearLayout>
    
</androidx.cardview.widget.CardView>